%p#notice= notice
%h1 Venues
- if @venues.present?
  %table
    %thead
      %tr
        %th Rows
        %th Columns
        %th Available seats
        %th Total seats
        %th % available seats
        %th{:colspan => "3"}
    %tbody
      - @venues.each do |venue|
        %tr
          %td= venue.rows
          %td= venue.columns
          %td= venue.seats.count
          %td= venue.seats.available.count
          %td= percentage_available_seats(venue)
          %td= link_to 'Show', venue
          %td= link_to 'Edit', edit_venue_path(venue)
          %td= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Venue', new_venue_path
